@if (GameData == null || TestData == null || BasicData == null)
{
    if (GameData == null)
    {
        <div>No Game Data</div>
    }
    if (TestData == null)
    {
        <div>No Test Data</div>
    }
    if (BasicData == null)
    {
        <div>No Basic Data</div>
    }
    return;
}
<ParentControl VM="YahtzeeMainViewModel">
    <YahtzeeMainView />
</ParentControl>
<ParentControl VM="MultiplayerOpeningViewModel<YahtzeePlayerItem>">
    <MultiplayerOpeningView P="YahtzeePlayerItem" />
</ParentControl>