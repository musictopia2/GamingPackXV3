@inherits BasicGameView<ItalianDominosMainViewModel>
<p>Welcome to ItalianDominos</p>

<BaseBoneyardPileBlazor D="SimpleDominoInfo" BoneyardPile="DataContext!.BoneYard" LI="DominosBasicShuffler<SimpleDominoInfo>">
    <BasicDominoBlazor D="SimpleDominoInfo" DeckObject="GetDomino" TargetHeight="10vh" />
</BaseBoneyardPileBlazor>
<BaseHandBlazor Hand="DataContext.PlayerHand" AdditionalSpacing="0" Context="Domino" D="SimpleDominoInfo">
    <BasicDominoBlazor PartOfBoard="true" D="SimpleDominoInfo" DeckObject="Domino" CommandObject="DataContext.PlayerHand.ObjectSingleClickCommand" CommandParameter="Domino" />
</BaseHandBlazor>
<ScoreBoardBlazor P="ItalianDominosPlayerItem" Players="DataContext.GetPlayerList" Columns="_scores" />

<LabelGridComponent DataContext="DataContext.VMData" Labels="_labels" />